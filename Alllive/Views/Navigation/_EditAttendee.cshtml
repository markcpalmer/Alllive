<!-- Trigger the modal with a button -->

<!-- Modal -->
<div id="editAttendee" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Attendee</h4>
            </div>
            <div class="modal-body">
                @Html.Hidden("editAttendeeID")
                @Html.Hidden("editUserID")
                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Name")
                    </div>
                    <div class="col-sm-6">
                        <input type="text" name="editName" id="editName" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Email")
                    </div>
                    <div class="col-sm-6">
                        <input type="text" name="editEmail" id="editEmail" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        @Html.Label("Rate")
                    </div>
                    <div class="col-sm-3">
                        <input type="number" name="editRate" id="editRate" class="form-control" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button onclick="Attendee_Save()" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>

            </div>
        </div>

    </div>
</div>
