<!-- This handles Reoccurring opttions -->
<script>
    $(document).ready(function () {
        $("#Recurr").click(function () {
            if ($(this).is(':checked')) {
                $("#RecurrOptions").show();
                $("#Daily").show();
                $("#Day").show();
                $("#selectFrequency").children('option').hide();
                $("#selectFrequency").children("option[id^=Day]").show()

                //Populates the Frequency default (Day)
                for (var j = 0; j <= 15 ; j++) {
                    $("#Frequency").append($('<option></option>').val(j).text(j));
                }
            }
            else {
                $("#RecurrOptions").hide();
                $("#Daily").hide();
                $("#Day").hide();
                //Also include clearing out EVERY value for Reoccur Options
            }
        });
    });
</script>

<!-- This handles the Frequency options and displays-->
<script>
    $(document).ready(function () {
        $("#myList").change(function () {
            if ($(this).val() === "2") {
                $("#Frequency").text("Week");
                $("#Day").hide();
                $("#Weekly").show();
                $("#Monthly").hide();

                // Populates the # in selectFrequency based off of ID
                $("#selectFrequency").children('option').hide();
                $("#selectFrequency").children("option[id^=Week]").show()
            }
            else if ($(this).val() === "1") {
                $("#Frequency").text("Day");
                $("#Day").show();
                $("#Weekly").hide();
                $("#Monthly").hide();

                $("#selectFrequency").children('option').hide();
                $("#selectFrequency").children("option[id^=Day]").show()
            }
            else if ($(this).val() === "3") {
                $("#Frequency").text("Month");
                $("#Day").hide();
                $("#Weekly").hide();
                $("#Monthly").show();

                $("#selectFrequency").children('option').hide();
                $("#selectFrequency").children("option[id^=Month]").show()
            }
        });
    });
</script>

<!-- This sets the frequency List items based on myList selection -->
<script>
    $(document).ready(function () {
        $("#myList").change(function () {
            const Day = 15;
            const Week = 12;
            const Month = 3;

            if ($(this).val() === "2") {                
                for (var j = 0; j <= Week ; j++) {
                   $("#Frequency").append($('<option></option>').val(j).text(j));
                }
            }
            else if ($(this).val() === "3") {
                for (var j = 0; j <= Month ; j++) {
                   $("#Frequency").append($('<option></option>').val(j).text(j));
                }
            }
            else if ($(this).val() === "1") {
                for (var j = 0; j <= Day ; j++) {
                    $("#Frequency").append($('<option></option>').val(j).text(j));
                }
            }
        })
    });
</script>