<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>

<script>
    $(function () {
    $("#Recurr").click(function () {
            if ($(this).is(':checked')) {
                $("#RecurrOptions").show();
            }
            else {
                $("#RecurrOptions").hide();
            }
        });
    });
</script>
<script>
    $(function () {
        $("#myList").change(function () {
            if ($(this).val()== 1) {
                $("#Day").show();
            }
            else {
                $("#Day").hide();
            }
        });
    });
</script>