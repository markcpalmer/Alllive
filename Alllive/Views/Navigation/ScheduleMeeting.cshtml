        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.Label("Description")
            </div>
            <div class="col-sm-2">
                @Html.TextArea("Description")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2">
                @Html.Label("Date")
            </div>
            <div class="col-sm-2">
                <input type="date" />
            </div>
        </div>
