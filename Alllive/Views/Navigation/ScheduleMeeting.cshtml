<!-- This handles Reoccurring opttions -->
<script>
    $(document).ready(function () {
        $("#Recurr").click(function () {
            if ($(this).is(':checked')) {
                $("#RecurrOptions").show();
                $("#Daily").show();
                $("#Day").show();
                $("#RepeatDaily").children('option').hide();
                $("#RepeatDaily").children("option[id^=Day]").show()

                //Populates the Frequency default (Day)
                for (var j = 0; j <= 15 ; j++) {
                    $("#RepeatDaily").append($('<option></option>').val(j).text(j));
                }
            }
            else {
                $("#RecurrOptions").hide();
                $("#Daily").hide();
                $("#Day").hide();
            }
        });
    });
</script>

<!-- This handles the Frequency options and displays-->
<script>
    $(document).ready(function () {
        $("#myList").change(function () {

            function cleanup(val) {
                if(val === 3) { //Monthly
                    $("#MonthlyFrequency1 option:selected").text("1");
                    $("#MonthlyFrequency2 option:selected").text("First");
                    $("#MonthlyFrequency3 option:selected").text("Sunday");
                    $("#rbtn1").prop("checked", false);
                    $("#rbtn2").prop("checked", false);
                    $("#rbtn3").prop("checked", false);
                    $("#rbtn4").prop("checked", false);
                }
                else if(val === 2) {
                    $("#Sunday").prop("checked", false);
                    $("#Monday").prop("checked", false);
                    $("#Tuesday").prop("checked", false);
                    $("#Wednesday").prop("checked", false);
                    $("#Thursday").prop("checked", false);
                    $("#Friday").prop("checked", false);
                    $("#Saturday").prop("checked", false);
                }
            }

            if ($(this).val() === "2") {
                $("#Frequency").text("Week");
                $("#Day").hide();
                $("#Weekly").show();
                $("#Monthly").hide();

                // Populates the # in RepeatDaily based off of ID
                $("#RepeatDaily").children('option').hide();
                $("#RepeatDaily").children("option[id^=Week]").show()
                $("#RepeatDaily").val(0);

                //Remove Monthly
                cleanup(3);
            }
            else if ($(this).val() === "1") {
                $("#Frequency").text("Day");
                $("#Day").show();
                $("#Weekly").hide();
                $("#Monthly").hide();

                $("#RepeatDaily").children('option').hide();
                $("#RepeatDaily").children("option[id^=Day]").show();
                $("#RepeatDaily").val(0);

                cleanup(3); //Remove Monthly
                cleanup(2);//Remove Weekly
            }
            else if ($(this).val() === "3") {
                $("#Frequency").text("Month");
                $("#Day").hide();
                $("#Weekly").hide();
                $("#Monthly").show();
                $("#RepeatDaily").val(0);

                $("#RepeatDaily").children('option').hide();
                $("#RepeatDaily").children("option[id^=Month]").show()

                cleanup(2); //Remove Weekly
            }
        });
    });
</script>

<!-- This sets the frequency List items based on myList selection -->
<script>
    $(document).ready(function () {
        $("#myList").change(function () {
            const Day = 15;
            const Week = 12;
            const Month = 3;

            if ($(this).val() === "2") {
                for (var j = 0; j <= Week ; j++) {
                   $("#RepeatDaily").append($('<option></option>').val(j).text(j));
                }
            }
            else if ($(this).val() === "3") {
                for (var j = 0; j <= Month ; j++) {
                   $("#RepeatDaily").append($('<option></option>').val(j).text(j));
                }
            }
            else if ($(this).val() === "1") {
                for (var j = 0; j <= Day ; j++) {
                    $("#RepeatDaily").append($('<option></option>').val(j).text(j));
                }
            }
        })
    });
</script>
