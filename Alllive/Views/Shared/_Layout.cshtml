<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alllive", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">



                    @if (Session["AllLiveUser"] != null)
                    {
                        if (ViewBag.isTutor == true)
                        {
                            <li>@Html.ActionLink("New Meeting", "ScheduleMeeting", "Meeting")</li>
                        }
                    <li>@Html.ActionLink("Schedule", "Index", "Home")</li>
                    }
                    <li>@Html.ActionLink("Join Meeting", "JoinMeeting", "Meeting")</li>
                    <li>@Html.ActionLink("Distance Learning", "DistanceLearning", "Navigation")</li>
                    <li>@Html.ActionLink("Online Childrens Yoga", "OnlineYoga", "Navigation")</li>
                    <li>@Html.ActionLink("Search Tutors", "SearchTutor", "Search")</li>




                </ul>
                <div class="loginButton">
                    @* turn on login button if user is null turn it off if user is not null *@
                    @if (Session["AllLiveUser"] == null)
                    {
                        @Html.ActionLink("Login", "Login", "User", false, new { style = "position:absolute; right:10px; top:10px;" })
                        @Html.ActionLink("Register", "Register", "User", false, new { style = "position:absolute; right:60px; top:10px;" })
                        @*@Html.ActionLink("Register as Tutor", "TutorRegistration", "User", false, new { style = "position:absolute; right:160px; top:10px;" })*@

                    }
                    else
                    {

                        @Html.ActionLink("Profile", "ViewProfile", "User", null, new { style = "position: absolute; right:70px; top:10px;" })
                        @Html.ActionLink("Messages", "MessageCenter", "Message", null, new { style = "position: absolute; right:150px; top:10px;" })

                        @Html.ActionLink("Sign Out", "Logoff", "User", false, new { style = "position: absolute; right:10px; top:10px;" })
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div id="mainBody">
            @RenderBody()
        </div>
        <hr />
        <footer>
            <div style="left: 20px; text-align: left; background-color: #ffffff;">
                <ul>

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Catalog", "Catalog", "Home")</li>
                </ul>
            </div>
            <br />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    

    @RenderSection("scripts", required: false)
</body>
</html>
