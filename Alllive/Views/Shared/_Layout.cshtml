<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Alllive", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">


                    @* if user is null turn send users to login page when they click schedule,join or start*@
                    @if (Session["AllLiveUser"] == null)
                    {
                        <li>@Html.ActionLink("Schedule Meeting", "Login", "Home")</li>
                        <li>@Html.ActionLink("Join Meeting", "JoinMeeting", "Navigation")</li>
                        <li>@Html.ActionLink("Start Meeting", "Login", "Home")</li>
                        <li>@Html.ActionLink("Distance Learning", "DistanceLearning", "Navigation")</li>
                        <li>@Html.ActionLink("Online Childrens Yoga", "OnlineYoga", "Navigation")</li>


                    }
                    else
                    {
                        <li>@Html.ActionLink("Schedule Meeting", "ScheduleMeeting", "Navigation")</li>
                        <li>@Html.ActionLink("Join Meeting", "JoinMeeting", "Navigation")</li>
                        <li>@Html.ActionLink("Start Meeting", "StartMeeting", "Navigation")</li>
                        <li>@Html.ActionLink("Distance Learning", "DistanceLearning", "Navigation")</li>
                        <li>@Html.ActionLink("Online Childrens Yoga", "OnlineYoga", "Navigation")</li>

                    }


                </ul>
                <div class="loginButton">
                    @* turn on login button if user is null turn it off if user is not null *@
                    @if (Session["AllLiveUser"] == null)
                    {
                        @Html.ActionLink("Login", "Login", "Home", false, new { style = "position:absolute; right:10px; top:10px;" })
                        @Html.ActionLink("Register", "Register", "User", false, new { style = "position:absolute; right:60px; top:10px;" })
                        @Html.ActionLink("Register as Tutor", "TutorRegistration", "User", false, new { style = "position:absolute; right:160px; top:10px;" })

                    }
                    else
                    {
                        @Html.ActionLink("Profile", "ViewProfile", "User", null, new { style = "position: absolute; right:60px; top:10px;" })

                        @Html.ActionLink("Sign Out", "Logoff", "User", false, new { style = "position: absolute; right:10px; top:10px;" })
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div style="left: 20px; text-align: left; background-color: #ffffff;">
                <ul>

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Catalog", "Catalog", "Home")</li>
                </ul>
            </div>
            <br />
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
